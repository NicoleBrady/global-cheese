        },
        {
            "type": "url",
            "id": "link",
            "label": "Link"
        }
    ],
    "blocks": [
        {
            "type": "text",
            "name": "Text column",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Heading",
                    "default": "Column heading"
                },
                {
                    "type": "text",
                    "id": "sub_title",
